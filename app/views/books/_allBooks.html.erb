<div class="allB">
	<h1>Add a new book</h1>
	<p class="cust-link"><%= link_to 'Add a custom book', new_book_path, remote: true %></p>
	<div class="all-btns">
		<input class="form-control" type="text" value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword'>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		<button class="btn btn-primary btn-add">Add</button>
	</div>
	<%= render @books %>
</div>